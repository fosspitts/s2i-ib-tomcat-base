#!/bin/bash -e
#
# S2I assemble script for the 'ib-tomcat-base' image.
# The 'assemble' script builds your application source so that it is ready to run.
#
# For more information refer to the documentation:
#	https://github.com/openshift/source-to-image/blob/master/docs/builder_image.md
#

echo "---> Running the assemble script ........"


if [[ "$1" == "-h" ]]; then
	# If the 'ib-tomcat-base' assemble script is executed with '-h' flag,
	# print the usage.
	exec /usr/libexec/s2i/usage
fi

echo OPENSHIFT_BUILD_SOURCE=$OPENSHIFT_BUILD_SOURCE

echo *** environment variables ****
env
echo ******************************

echo *** checking out ib-ansible-openshift ***
mkdir ib-ansible-openshift
cd ib-ansible-openshift
git archive --format=tar \
   --remote=http://git-apps.192.168.140.7.xip.io/git/justin/ib-ansible-openshift.git master | tar -xf -
ls -ltr
echo *****************************************


echo "---> Executing the deployer script ........"

/tmp/src/deploy.sh

echo "---> Finished executing the deployer script ........"